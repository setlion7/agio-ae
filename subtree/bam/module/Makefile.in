
ifneq ($(KERNELRELEASE),)
	src := @module_root@
	obj-m := @PROJECT_NAME@.o
	@PROJECT_NAME@-objs := pci.o list.o ctrl.o map.o
	ccflags-y += @module_ccflags@
	KBUILD_EXTRA_SYMBOLS := @module_symbols@
else

.PHONY: default reload unload load clean install

default:
	$(MAKE) -C @KERNEL@ M=@module_output@ modules

clean:
	$(MAKE) -C @KERNEL@ M=@module_output@ clean

reload: unload load

unload:
	-rmmod @PROJECT_NAME@.ko

load:
	insmod @PROJECT_NAME@.ko max_num_ctrls=64

install: default
	$(MAKE) -C @KERNEL@ M=@module_output@ modules_install
	#$(MAKE) INSTALL_MOD_DIR=@PROJECT_NAME@ -C @KERNEL@ M=@module_output@ modules_install

endif

